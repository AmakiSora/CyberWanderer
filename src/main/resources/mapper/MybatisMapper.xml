<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.MybatisDao">
    <insert id="insertBiliBiliDynamic" parameterType="pojo.BiliBiliDynamic">
        insert into trend
        (name,content)
        values(#{name},#{description})
    </insert>

    <select id="selectBiliBiliDynamic" resultType="pojo.BiliBiliDynamic">
        select trend.name,trend.content from trend where id= "AkiSky"
    </select>
</mapper>